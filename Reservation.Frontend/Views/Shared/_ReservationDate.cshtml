@model Reservation.Frontend.Models.TyreChangeReservationFormModel

<div id="date-and-time" class="row justify-content-center">
    <div class="row" id="reservation-date">
        @{ await Html.RenderPartialAsync("_TyreChangeReservationDate", Model); }
    </div>
    <div class="row" id="reservation-time">
        @{ await Html.RenderPartialAsync("_TyreChangeReservationTime", Model); }
    </div>
</div>

<!-- Out off band-->
@if (Model.Location is not null)
{
    <div id="location-map" hx-swap-oob="true">
        <div>@Model.Location</div>
        <div>
            @await Component.InvokeAsync("ReservationDate", new {type = "Just testing"})
        </div>
    </div>
}
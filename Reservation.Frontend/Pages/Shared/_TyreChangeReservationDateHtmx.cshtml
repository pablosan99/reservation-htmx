@model Reservation.Frontend.Pages.ReservationForm
@{
    System.Diagnostics.Debug.Assert(Model != null);
}
<select asp-for="ReservationDate"
        asp-items="Model.PossibleDates"
        hx-get
        hx-page="ReservationForm"
        hx-page-handler="TimeSlots"
        hx-swap="outerHTML"
        hx-target="#reservationTime"
        id="reservationDate"
        class="form-control">
</select>
<div class="invalid-feedback">
    <span asp-validation-for="ReservationDate"></span>
</div>